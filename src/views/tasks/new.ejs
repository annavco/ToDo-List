<%- include('../layouts/header', {title: 'Nova Tarefa'})%> <%-
include('../layouts/menu')%>
<section class="section">
  <div class="container">
    <h1 class="title size-4">Nova Tarefa</h1>

    <form method="post" action="checklists/<%= checklist._id%>/tasks">
      <div class="field">
        <label class="label">Nome</label>
        <div class="control">
          <input
            class="input"
            type="text"
            name="task[name]"
            placeholder="Lista de Tarefas"
            value="<%= checklist.name %>"
          /> <% if(task.error && task.errors.hasOwnProperty('name')) { %>
          <p class="is-danger help"><%= task.erros.name.message %></p>
        <%}%>
      </div>
      </div>
      <button type="submit" class="button is-success">Salvar</button>
            <a href="/checklists/<%= checklist._id%>" class="button">Cancelar</a>
          </form>
    
    </form>
  </div>
</section>
<%- include('../layouts/footer')%>
